    <!-- Navigation Buttons -->
    <div class="footer-nav flex space-x-3">
        <button id="prevButton" class="nav-button" onclick="changeSlide(-1)">Previous</button>
        <button id="nextButton" class="nav-button" onclick="changeSlide(1)">Next</button>
    </div>

    <script>
        let currentSlide = 1;
        const slides = document.querySelectorAll('.slide');
        const totalSlides = slides.length;

        function showSlide(slideNumber) {
            slides.forEach(slide => slide.classList.remove('active'));
            const activeSlide = document.getElementById('slide' + slideNumber);
            if (activeSlide) {
                activeSlide.classList.add('active');
                window.scrollTo(0,0); // Scroll to top of slide
            }

            // Update button states
            document.getElementById('prevButton').disabled = slideNumber === 1;
            document.getElementById('nextButton').disabled = slideNumber === totalSlides;
        }

        function changeSlide(direction) {
            currentSlide += direction;
            if (currentSlide < 1) {
                currentSlide = 1;
            }
            if (currentSlide > totalSlides) {
                currentSlide = totalSlides;
            }
            showSlide(currentSlide);
        }

        // Initialize first slide
        showSlide(currentSlide);

        // Keyboard navigation
        document.addEventListener('keydown', function(event) {
            if (event.target.tagName === 'INPUT' || event.target.tagName === 'TEXTAREA') {
                return; // Don't interfere with text input
            }
            if (event.key === 'ArrowRight' || event.key === ' ') { // Space bar for next slide
                if (currentSlide < totalSlides) {
                    changeSlide(1);
                }
                event.preventDefault(); 
            } else if (event.key === 'ArrowLeft') {
                if (currentSlide > 1) {
                    changeSlide(-1);
                }
                event.preventDefault();
            }
        });
    </script>

